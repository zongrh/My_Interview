<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A2D9F2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/main_start" />


        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="@string/main_stop" />

        <Button
            android:id="@+id/btn_bind"
            android:layout_width="wrap_content"
            android:background="#FFD2D2"
            android:layout_height="wrap_content"
            android:text="@string/main_bind" />

        <Button
            android:id="@+id/btn_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_unbind" />

        <Button
            android:id="@+id/btn_getdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取数据" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6FFA7"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_msg_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定service（msg）" />

        <Button
            android:id="@+id/btn_msg_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="取消绑定service（msg）" />

        <Button
            android:id="@+id/btn_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发消息给service" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFFC9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sb_start"
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="启动service" />

        <Button
            android:id="@+id/btn_sb_bind"
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定service" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB6B6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sb_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止service" />

        <Button
            android:id="@+id/btn_sb_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消绑定" />
    </LinearLayout>
</LinearLayout>